  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) 启动 server",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/server/server",
      "args": [
        "-native_camera_index=1",
        "-classifier_path=D:/cmake-install-modules/opencv-4.10.0/etc/haarcascades/haarcascade_frontalface_alt2.xml",
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "D:\\mingw64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      //"preLaunchTask": "C/C++: g++.exe build active file"
    },
    {
      "name": "(gdb) 启动 client",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/client/client.exe",
      "args": [
        "-rpc_server_addr=localhost:50051",
        "-camera_id=1",
        // "-network_camera_url=http://192.168.11.182:4747/video",
        "-model_path=D:/cmake-install-modules/opencv-4.10.0/etc/haarcascades/haarcascade_frontalface_alt2.xml"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "D:\\mingw64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      //"preLaunchTask": "C/C++: g++.exe build active file"
    }
  ]
}